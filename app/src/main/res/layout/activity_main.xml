<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/student"
        android:layout_width="133dp"
        android:layout_height="130dp"
        app:srcCompat="@drawable/i" />


    <ImageView
        android:id="@+id/istudent"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="79dp"
        android:layout_marginTop="88dp"
        app:srcCompat="@drawable/photoshop" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="41dp"
        android:layout_marginTop="18dp"
        android:layout_toEndOf="@+id/student"
        android:fontFamily="monospace"
        android:text="Akshuak"
        android:textColor="@color/black"
        android:textSize="25dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="292dp"
        android:layout_marginTop="60dp"
        android:drawableStart="@drawable/ic_baseline_book_24"
        android:fontFamily="serif"
        android:text="105 book"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="27dp"
        android:layout_marginTop="60dp"
        android:layout_toEndOf="@+id/student"
        android:drawableStart="@drawable/ic_baseline_menu_book_24"
        android:fontFamily="serif"
        android:text="62 page"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="292dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="10dp"
        android:drawableStart="@drawable/ic_baseline_stars_24"
        android:fontFamily="serif"
        android:text="500 point"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="91dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="292dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="10dp"
        android:drawableStart="@drawable/ic_baseline_calendar_today_24"
        android:fontFamily="serif"
        android:text="today"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold" />

</RelativeLayout>